@{
    ViewData["Title"] = "Chat with Gemini AI";
}

<h2>@ViewData["Title"]</h2>


<form method="post">
    <div>
        <label for="mainUserInput">Enter your question:</label>
        <textarea asp-for="UserInput" id="mainUserInput" rows="4" cols="50" placeholder="Ask Gemini AI..."></textarea>
    </div>
    <button type="submit">Send</button>
</form>

@if (!string.IsNullOrEmpty(Model.AIResponse))
{
    <div>
        <strong>AI Response:</strong>
        <p>@Model.AIResponse</p>
    </div>
}