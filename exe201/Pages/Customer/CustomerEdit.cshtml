@page
@model exe201.Pages.Customer.CustomerEditModel

@{
    ViewData["Title"] = "Chỉnh sửa hồ sơ";
}

@section Styles {
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@500&family=Poppins&display=swap" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Poppins', sans-serif;
        }

        .edit-container {
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 60px 15px;
        }

        .edit-box {
            background: #ffffff;
            padding: 40px;
            border-radius: 16px;
            width: 100%;
            max-width: 550px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
        }

        .section-title {
            font-family: 'Playfair Display', serif;
            font-size: 32px;
            font-weight: 500;
            text-align: center;
            margin-bottom: 30px;
            color: #343a40;
            position: relative;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-control {
            padding: 12px;
            border-radius: 8px;
            border: 1px solid #ced4da;
            transition: border-color 0.3s;
        }

            .form-control:focus {
                border-color: #86b7fe;
                box-shadow: none;
            }

        label {
            font-weight: 600;
            margin-bottom: 6px;
            display: block;
            color: #495057;
        }

        .text-danger {
            font-size: 0.875rem;
        }

        .btn-save {
            background-color: #6c757d;
            border: none;
            color: white;
            padding: 12px 28px;
            font-weight: 500;
            border-radius: 30px;
            transition: background-color 0.3s ease;
        }

            .btn-save:hover {
                background-color: #5a6268;
            }
    </style>
}

<div class="edit-container">
    <form method="post" class="edit-box">
        <h2 class="section-title">Chỉnh sửa hồ sơ</h2>

        <input type="hidden" asp-for="UserProfile.UserId" />

        <div class="form-group">
            <label asp-for="User.Username">Tên</label>
            <input asp-for="User.Username" class="form-control" />
            <span asp-validation-for="User.Username" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="User.Email">Email</label>
            <input asp-for="User.Email" class="form-control" />
            <span asp-validation-for="User.Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="UserProfile.FullName">Họ và tên</label>
            <input asp-for="UserProfile.FullName" class="form-control" />
            <span asp-validation-for="UserProfile.FullName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="UserProfile.Address">Địa chỉ</label>
            <input asp-for="UserProfile.Address" class="form-control" />
            <span asp-validation-for="UserProfile.Address" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="UserProfile.Phone">Số điện thoại</label>
            <input asp-for="UserProfile.Phone" class="form-control" />
            <span asp-validation-for="UserProfile.Phone" class="text-danger"></span>
        </div>

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-save">Lưu thay đổi</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
