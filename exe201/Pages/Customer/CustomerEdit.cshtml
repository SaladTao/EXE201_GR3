@page
@model exe201.Pages.Customer.CustomerEditModel

@{
    ViewData["Title"] = "Edit Profile";
}

@section Styles {
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@500&family=Poppins&display=swap" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f5f3ed;
            font-family: 'Poppins', sans-serif;
        }

        .edit-container {
            display: flex;
            justify-content: center;
            align-items: center;
            padding-top: 60px;
            padding-bottom: 60px;
        }

        .edit-box {
            background: #fff;
            padding: 40px;
            border-radius: 12px;
            width: 100%;
            max-width: 600px;
            text-align: center;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }

        .section-title {
            font-family: 'Playfair Display', serif;
            font-size: 36px;
            font-weight: 500;
            margin-bottom: 30px;
            position: relative;
            display: inline-block;
        }

            .section-title::after {
                content: '';
                position: absolute;
                width: 100%;
                height: 1px;
                background-color: #000;
                left: 0;
                bottom: 0.3em;
            }

        .form-group {
            text-align: left;
            margin-bottom: 20px;
        }

        .form-control {
            width: 100%;
            padding: 12px;
            border: 1px solid #ddd;
            border-radius: 6px;
        }

        .profile-img {
            width: 120px;
            height: 120px;
            object-fit: cover;
            border-radius: 50%;
            border: 4px solid #e0e0e0;
            margin-bottom: 20px;
        }

        .btn-save {
            background: #ede4da;
            border: 1px solid #d5bca3;
            color: #8d7051;
            font-weight: bold;
            padding: 12px 30px;
            border-radius: 30px;
            transition: 0.3s ease;
        }

            .btn-save:hover {
                background-color: #decdbd;
            }

        .btn-cancel {
            padding: 12px 30px;
            border-radius: 30px;
            font-weight: 500;
            margin-left: 10px;
        }

        label {
            font-weight: 600;
        }

        .text-danger {
            font-size: 0.875rem;
        }
    </style>
}

<div class="edit-container">
    <form method="post" enctype="multipart/form-data" class="edit-box">
        <h2 class="section-title">Edit Profile</h2>

        <img src="@(Model.UserProfile.AvatarUrl ?? "/images/default-profile.png")"
             alt="Profile Image"
             class="profile-img" />

        <input type="hidden" asp-for="UserProfile.UserId" />

        <div class="form-group">
            <label asp-for="UserProfile.FullName">Full Name</label>
            <input asp-for="UserProfile.FullName" class="form-control" />
            <span asp-validation-for="UserProfile.FullName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="UserProfile.Address">Address</label>
            <input asp-for="UserProfile.Address" class="form-control" />
            <span asp-validation-for="UserProfile.Address" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="UserProfile.Phone">Phone</label>
            <input asp-for="UserProfile.Phone" class="form-control" />
            <span asp-validation-for="UserProfile.Phone" class="text-danger"></span>
        </div>

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-save">Save Changes</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
