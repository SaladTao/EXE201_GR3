@page
@model exe201.Pages.Customer.OrderDetailModel
@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ecommerce Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Be+Vietnam+Pro&family=Playfair+Display:wght@400;600;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            background-color: #f5f3ed;
            font-family: 'Poppins', sans-serif;
        }

        h1, h2, h3, h4, .page-title {
            font-family: 'Playfair Display', serif;
        }

        .page-title {
            font-size: 2.5rem;
            font-weight: 600;
            text-align: center;
            margin-bottom: 2rem;
            color: #343a40;
        }

        body {
            background-color: #f5f3ed;
            font-family: 'Poppins', sans-serif;
        }

        h1, h2, h3, .page-title {
            font-family: 'Playfair Display', serif;
        }

        .page-title {
            font-size: 2.5rem;
            font-weight: 600;
            text-align: center;
            margin-bottom: 2rem;
            color: #343a40;
        }

        .table-container {
            background: #fff;
            padding: 2rem;
            border-radius: 12px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }

        .table thead {
            background-color: #f8f9fa;
        }

        .table th {
            color: #343a40;
            font-weight: 600;
        }

        .table td, .table th {
            vertical-align: middle;
            text-align: center;
        }

        .text-muted {
            text-align: center;
            font-size: 1.1rem;
            color: #6c757d;
        }

        a {
            color: #007bff;
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div class="container mt-4">

        <div class="table-container mt-4">
            <h4 class="mb-3 text-center">Chi tiết đơn hàng:</h4>

            <table class="table table-bordered">
                <thead>
                    <tr>
                        
                        <th>Mã đơn hàng</th>
                        <th>Hình ảnh</th>
                        <th>Sản phẩm</th>
                        <th>Số lượng</th>
                        <th>Đơn giá</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var od in Model.OrderDetails)
                    {
                        <tr>
                            <td>@od.OrderId</td>
                            <td>
                                <img src="@od.Product.ImageUrl" alt="@od.Product.Name" style="width: 80px; height: 80px; object-fit: cover; border-radius: 8px;" />
                            </td>
                            <td>@od.Product.Name</td>
                            <td>@od.Quantity</td>
                            <td>@od.Price.ToString("C")</td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (!Model.OrderDetails.Any())
            {
                <p class="text-muted mt-3">Chưa có đơn hàng nào cho sản phẩm này.</p>
            }
            <a href="/Customer/Order">Quay trở lại</a>
        </div>
    </div>

</body>
</html>
