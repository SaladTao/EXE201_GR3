@page
@model exe201.Pages.Products.CreateModel
@{
    ViewData["Title"] = "Thêm sản phẩm";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <div class="form-group">
        <label>Tên sản phẩm</label>
        <input asp-for="Product.Name" class="form-control" />
        <span asp-validation-for="Product.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Mô tả</label>
        <textarea asp-for="Product.Description" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label>Giá</label>
        <input asp-for="Product.Price" class="form-control" />
        <span asp-validation-for="Product.Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Đường dẫn ảnh (ví dụ: images/product-item1.jpg)</label>
        <input asp-for="Product.ImageUrl" class="form-control" />
    </div>

    <div class="form-group">
        <label>Danh mục</label>
        <select asp-for="Product.CategoryId" asp-items="Model.CategoryList" class="form-control"></select>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Lưu</button>
</form>

<a asp-page="./Index">Quay về danh sách</a>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
