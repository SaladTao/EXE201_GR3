@page
@model exe201.Pages.Admin.Orders.DeleteModel

@{
    ViewData["Title"] = "Delete Order";
    Layout = "~/Pages/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white">
            <h2 class="mb-0">Confirm Deletion</h2>
        </div>
        <div class="card-body">
            <h3 class="text-center text-danger">Are you sure you want to delete this order?</h3>
            <hr />
            <dl class="row">
                <dt class="col-sm-3 font-weight-bold">User Email:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Order.User.Email)</dd>

                <dt class="col-sm-3 font-weight-bold">Total Amount:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Order.TotalAmount)</dd>

                <dt class="col-sm-3 font-weight-bold">Created At:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Order.CreatedAt)</dd>

                <dt class="col-sm-3 font-weight-bold">Status:</dt>
                <dd class="col-sm-9">
                    <span class="badge badge-pill
                        @(Model.Order.Status == "Pending" ? "badge-warning" :
                        Model.Order.Status == "Shipped" ? "badge-info" :
                        Model.Order.Status == "Completed" ? "badge-success" :
                        "badge-danger")">
                        @Html.DisplayFor(model => model.Order.Status)
                    </span>
                </dd>
            </dl>
        </div>
    </div>

    <div class="text-center mt-4">
        <form method="post">
            <input type="hidden" asp-for="Order.Id" />
            <button type="submit" class="btn btn-danger btn-lg">Delete Order</button>
            <a asp-page="./Index" class="btn btn-secondary btn-lg ml-3">Cancel</a>
        </form>
    </div>
</div>