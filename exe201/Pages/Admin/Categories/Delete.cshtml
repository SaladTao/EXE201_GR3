@page
@model exe201.Pages.Admin.Categories.DeleteModel

@{
    ViewData["Title"] = "Xoá danh mục";
    Layout = "~/Pages/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 bg-white shadow p-4 rounded border border-danger-subtle">
            <h2 class="text-danger mb-4">
                <i class="bi bi-exclamation-triangle-fill"></i> Xác nhận xoá danh mục
            </h2>

            <p class="fs-5">Bạn có chắc chắn muốn xoá danh mục sau?</p>

            <dl class="row mb-4">
                <dt class="col-sm-4 fw-bold">
                    Tên danh mục
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Category.Name)
                </dd>

                <dt class="col-sm-4 fw-bold">
                    Ngày tạo
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Category.CreatedAt)
                </dd>
            </dl>

            <form method="post" class="d-flex justify-content-between">
                <input type="hidden" asp-for="Category.Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash-fill"></i> Xoá
                </button>
                <a asp-page="./Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Quay lại
                </a>
            </form>
        </div>
    </div>
</div>
