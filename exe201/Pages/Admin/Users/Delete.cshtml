@page
@model exe201.Pages.Admin.Users.DeleteModel

@{
    ViewData["Title"] = "Delete User";
    Layout = "~/Pages/Shared/_LayoutAdmin.cshtml";
}

<h1 class="text-danger mb-4"><i class="bi bi-exclamation-triangle-fill"></i> Delete User</h1>

<div class="alert alert-warning">
    <strong>Warning:</strong> This action cannot be undone. Are you sure you want to permanently delete this user?
</div>

<div class="card shadow-sm border-0 mb-4">
    <div class="card-body">
        <h5 class="card-title text-secondary">User Information</h5>
        <div class="row mb-2">
            <div class="col-sm-3 fw-semibold">Username</div>
            <div class="col-sm-9">@Model.User.Username</div>
        </div>
        @if (!string.IsNullOrEmpty(Model.User.Profile?.AvatarUrl))
        {
            <div class="row mb-2">
                <div class="col-sm-3 fw-semibold">Avatar</div>
                <img src="@Model.User.Profile.AvatarUrl" alt="Avatar" style="width: 120px;height:120px;" />
            </div>
        }

        <div class="row mb-2">
            <div class="col-sm-3 fw-semibold">Email</div>
            <div class="col-sm-9">@Model.User.Email</div>
        </div>
        <div class="row mb-2">
            <div class="col-sm-3 fw-semibold">Full Name</div>
            <div class="col-sm-9">@Model.User.Profile?.FullName</div>
        </div>
        <div class="row mb-2">
            <div class="col-sm-3 fw-semibold">Phone</div>
            <div class="col-sm-9">@Model.User.Profile?.Phone</div>
        </div>
        <div class="row mb-2">
            <div class="col-sm-3 fw-semibold">Address</div>
            <div class="col-sm-9">@Model.User.Profile?.Address</div>
        </div>
        <div class="row mb-2">
            <div class="col-sm-3 fw-semibold">Role</div>
            <div class="col-sm-9">@Model.User.Role</div>
        </div>
        <div class="row mb-2">
            <div class="col-sm-3 fw-semibold">Created At</div>
            <div class="col-sm-9">@Model.User.CreatedAt.ToString("dd/MM/yyyy HH:mm")</div>
        </div>
    </div>
</div>

<form method="post" class="mt-3">
    <input type="hidden" asp-for="User.Id" />
    <button type="submit" class="btn btn-danger">
        <i class="bi bi-trash-fill"></i> Delete
    </button>
    <a asp-page="./Index" class="btn btn-secondary ms-2">
        <i class="bi bi-arrow-left-circle"></i> Cancel
    </a>
</form>
