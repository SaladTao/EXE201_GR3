@page
@model exe201.Pages.Admin.Users.DetailsModel

@{
    ViewData["Title"] = "User Details";
    Layout = "~/Pages/Shared/_LayoutAdmin.cshtml";
}

<h1 class="mb-4 text-primary">User Details</h1>

<div class="card shadow-sm border-0 mb-4">
    <div class="card-body">
        <h5 class="card-title text-secondary">Thông tin tài khoản</h5>
        <div class="row mb-3">
            <div class="col-sm-3 fw-semibold">Tên tài khoản</div>
            <div class="col-sm-9">@Model.User.Username</div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-3 fw-semibold">Email</div>
            <div class="col-sm-9">@Model.User.Email</div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-3 fw-semibold">Role</div>
            <div class="col-sm-9">@Model.User.Role</div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-3 fw-semibold">Ngày tạo</div>
            <div class="col-sm-9">@Model.User.CreatedAt.ToString("dd/MM/yyyy HH:mm")</div>
        </div>

        <hr />

        <h5 class="card-title text-secondary">Thông tin người dùng</h5>
        <div class="row mb-3">
            <div class="col-sm-3 fw-semibold">Họ và tên</div>
            <div class="col-sm-9">@Model.User.Profile?.FullName</div>
        </div>
        @* <div class="row mb-3"> *@
        @*     <div class="col-sm-3 fw-semibold">Avatar</div> *@
        @*     @if (!string.IsNullOrEmpty(Model.User.Profile?.AvatarUrl)) *@
        @*     { *@
        @*         <img src="@Model.User.Profile?.AvatarUrl" alt="Product Image" style="height: 200px;width:200px;" /> *@
        @*     } *@
        @*     else *@
        @*     { *@
        @*         <span class="text-muted">No image available</span> *@
        @*     } *@
        @* </div> *@
        <div class="row mb-3">
            <div class="col-sm-3 fw-semibold">Số điện thoại</div>
            <div class="col-sm-9">@Model.User.Profile?.Phone</div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-3 fw-semibold">Địa chỉ</div>
            <div class="col-sm-9">@Model.User.Profile?.Address</div>
        </div>
    </div>
</div>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.User.Id" class="btn btn-primary">
        <i class="bi bi-pencil-square"></i> Chỉnh sửa
    </a>
    <a asp-page="./Index" class="btn btn-secondary ms-2">
        <i class="bi bi-arrow-left-circle"></i> Quay lại danh sách
    </a>
</div>
