@page
@model exe201.Pages.Admin.Users.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_LayoutAdmin.cshtml";
}

<h1 class="mb-4">Create New User</h1>
<hr />

<form method="post">
    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

    <div class="row">
        <!-- Cột trái: Thông tin tài khoản -->
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="User.Username" class="form-label fw-semibold">Username <span class="text-danger">*</span></label>
                <input asp-for="User.Username" class="form-control" />
                <span asp-validation-for="User.Username" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="User.Email" class="form-label fw-semibold">Email <span class="text-danger">*</span></label>
                <input asp-for="User.Email" class="form-control" />
                <span asp-validation-for="User.Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="User.Password" class="form-label fw-semibold">Password <span class="text-danger">*</span></label>
                <input asp-for="User.Password" class="form-control" type="password" />
                <span asp-validation-for="User.Password" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="User.Role" class="form-label fw-semibold">Role <span class="text-danger">*</span></label>
                <select asp-for="User.Role" class="form-select" asp-items="Model.RoleOptions"></select>
                <span asp-validation-for="User.Role" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="User.CreatedAt" class="form-label fw-semibold">Created At</label>
                <input asp-for="User.CreatedAt" class="form-control" type="datetime-local" />
                <span asp-validation-for="User.CreatedAt" class="text-danger"></span>
            </div>
        </div>

        <!-- Cột phải: Thông tin profile -->
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="User.Profile.FullName" class="form-label fw-semibold">Full Name <span class="text-danger">*</span></label>
                <input asp-for="User.Profile.FullName" class="form-control" />
                <span asp-validation-for="User.Profile.FullName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="User.Profile.Address" class="form-label fw-semibold">Address <span class="text-danger">*</span></label>
                <input asp-for="User.Profile.Address" class="form-control" />
                <span asp-validation-for="User.Profile.Address" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="User.Profile.Phone" class="form-label fw-semibold">Phone <span class="text-danger">*</span></label>
                <input asp-for="User.Profile.Phone" class="form-control" />
                <span asp-validation-for="User.Profile.Phone" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="User.Profile.AvatarUrl" class="form-label fw-semibold">Avatar URL <span class="text-danger">*</span></label>
                <input asp-for="User.Profile.AvatarUrl" class="form-control" />
                <span asp-validation-for="User.Profile.AvatarUrl" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="mt-4 d-flex align-items-center gap-2">
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-plus-circle-fill"></i> Create
        </button>
        <a asp-page="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Back to List
        </a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}