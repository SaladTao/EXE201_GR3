@page
@model exe201.Pages.Admin.Products.IndexModel

@{
    ViewData["Title"] = "Product List";
    Layout = "~/Pages/Shared/_LayoutAdmin.cshtml";
}

<div class="">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Product List</h2>
        <a asp-page="Create" class="btn btn-success btn-lg">Create New</a>
    </div>

    <form method="get" class="row g-2 mb-4">
        <div class="col-md-4">
            <input type="text" name="SearchName" value="@Model.SearchName" class="form-control" placeholder="Tìm theo tên sản phẩm..." />
        </div>
        <div class="col-md-4">
            <select name="CategoryId" class="form-select">
                <option value="0">-- Tất cả danh mục --</option>
                @if (Model.Categories != null)
                {
                    foreach (var category in Model.Categories)
                    {
                        <option value="@category.Value" selected="@(category.Value == Model.CategoryId?.ToString())">
                            @category.Text
                        </option>
                    }
                }
            </select>
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-outline-primary w-100">Lọc</button>
        </div>
    </form>


    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th style="max-width: 150px; word-wrap: break-word; white-space: normal;">Name</th>
                        <th style="max-width: 400px; word-wrap: break-word; white-space: normal;">Description</th>
                        <th>Price</th>
                        <th>Image</th>
                        <th>Created At</th>
                        <th>Category</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Product)
                    {
                        <tr>
                            <td style="max-width: 150px; word-wrap: break-word; white-space: normal;">
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td style="max-width: 400px; word-wrap: break-word; white-space: normal;">
                                @Html.Raw(item.Description.Replace("\r\n", "<br />").Replace("\n", "<br />"))
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.Price)</td>
                            <td>
                                <img src="@item.ImageUrl" alt="Product Image" style="width: 100px;height:100px;">
                            </td>
                            
                            <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                            <td>@Html.DisplayFor(modelItem => item.Category.Name)</td>
                            <td class="text-center">
                                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm mb-1 d-block">Edit</a>
                                <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm mb-1 d-block">Details</a>
                                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm d-block">Delete</a>
                            </td>

                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>

    <nav class="mt-3">
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link"
                       asp-route-pageNumber="@i"
                       asp-route-SearchName="@Model.SearchName"
                       asp-route-CategoryId="@Model.CategoryId">@i</a>
                </li>
            }
        </ul>
    </nav>

</div>