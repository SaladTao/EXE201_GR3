@page
@model exe201.Pages.Admin.Products.DetailsModel

@{
    ViewData["Title"] = "Product Details";
    Layout = "~/Pages/Shared/_LayoutAdmin.cshtml";
}

<h1 class="display-4 mb-4 text-primary">Product Details</h1>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <h4 class="card-title">Product Information</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.Product.Name)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Product.Name)
            </dd>

            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.Product.Description)
            </dt>
            <dd class="col-sm-9">
                @Html.Raw(Model.Product.Description?.Replace("\r\n", "<br />").Replace("\n", "<br />"))
            </dd>

            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.Product.Price)
            </dt>
            <dd class="col-sm-9 text-success">
                $@Html.DisplayFor(model => model.Product.Price)
            </dd>

            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.Product.ImageUrl)
            </dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.Product.ImageUrl))
                {
                    <img src="@Model.Product.ImageUrl" alt="Product Image" class="img-thumbnail" style="max-height: 200px;" />
                }
                else
                {
                    <span class="text-muted">No image available</span>
                }
            </dd>

            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.Product.Camera360Url)
            </dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.Product.Camera360Url))
                {
                    <a href="@Model.Product.Camera360Url" target="_blank">View 360°</a>
                }
                else
                {
                    <span class="text-muted">No 360° view</span>
                }
            </dd>

            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.Product.VirtualGift)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Product.VirtualGift)
            </dd>

            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.Product.CreatedAt)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Product.CreatedAt)
            </dd>

            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.Product.Category)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Product.Category.Name)
            </dd>
        </dl>
    </div>
</div>

<div class="mb-4">
    <a asp-page="./Edit" asp-route-id="@Model.Product.Id" class="btn btn-warning me-2">Edit</a>
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
</div>
