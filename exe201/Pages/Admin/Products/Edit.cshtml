@page
@model exe201.Pages.Admin.Products.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Chỉnh sửa sản phẩm</h2>
        </div>
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Product.Id" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Product.Name" class="form-label">
                                <i class="bi bi-box-seam"></i> Tên sản phẩm
                            </label>
                            <input asp-for="Product.Name" class="form-control" placeholder="Enter product name" />
                            <span asp-validation-for="Product.Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Product.Description" class="form-label">
                                <i class="bi bi-file-text"></i> Mô tả
                            </label>
                            <textarea asp-for="Product.Description" class="form-control" rows="3" placeholder="Enter product description"></textarea>
                            <span asp-validation-for="Product.Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Product.Price" class="form-label">
                                <i class="bi bi-cash"></i> Giá
                            </label>
                            <input asp-for="Product.Price" class="form-control" type="number" placeholder="Enter price" />
                            <span asp-validation-for="Product.Price" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Product.ImageUrl" class="form-label">
                                <i class="bi bi-image"></i> Ảnh
                            </label>
                            <input asp-for="Product.ImageUrl" class="form-control" placeholder="Enter image URL" />
                            <span asp-validation-for="Product.ImageUrl" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Product.CategoryId" class="form-label">
                                <i class="bi bi-tags"></i> Thể loại
                            </label>
                            <select asp-for="Product.CategoryId" class="form-select" asp-items="@(ViewData["CategoryId"] as SelectList)"></select>
                            <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <input class="form-check-input" asp-for="Product.VirtualGift" />
                            <label class="form-check-label">@Html.DisplayNameFor(model => model.Product.VirtualGift)</label>
                        </div>
                    </div>
                </div>

                

                <div class="text-center">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save"></i> Lưu 
                    </button>
                    <a asp-page="./Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Quay lại danh sách
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}