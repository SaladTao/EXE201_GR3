@page
@model exe201.Pages.Admin.Products.CreateModel

@{
    ViewData["Title"] = "Create Product";
    Layout = "~/Pages/Shared/_LayoutAdmin.cshtml";
}

<h1 class="mb-4 text-primary">Create New Product</h1>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <h4 class="card-title mb-3">Product Information</h4>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="mb-3">
                <label asp-for="Product.CategoryId" class="form-label">Category</label>
                <select asp-for="Product.CategoryId" class="form-select" asp-items="ViewBag.CategoryId"></select>
            </div>

            <div class="mb-3">
                <label asp-for="Product.Name" class="form-label"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Product.Description" class="form-label"></label>
                <textarea asp-for="Product.Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Product.Price" class="form-label"></label>
                <input asp-for="Product.Price" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Product.ImageUrl" class="form-label"></label>
                <input asp-for="Product.ImageUrl" class="form-control" />
                <span asp-validation-for="Product.ImageUrl" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Product.Camera360Url" class="form-label"></label>
                <input asp-for="Product.Camera360Url" class="form-control" />
                <span asp-validation-for="Product.Camera360Url" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <input class="form-check-input" asp-for="Product.VirtualGift" />
                <label class="form-check-label" asp-for="Product.VirtualGift"></label>
            </div>

            <div class="mb-4">
                <label asp-for="Product.CreatedAt" class="form-label"></label>
                <input asp-for="Product.CreatedAt" class="form-control" type="datetime-local" />
                <span asp-validation-for="Product.CreatedAt" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-success px-4">Create</button>
                <a asp-page="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
