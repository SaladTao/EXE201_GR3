@page
@model exe201.Pages.Staff.IndexModel

@{
    ViewData["Title"] = "Manage Categories";
    Layout = "~/Pages/Shared/_StaffLayout.cshtml";
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f5f3ed;
            font-family: 'Poppins', sans-serif;
        }

        .page-title {
            font-size: 2.5rem;
            font-weight: 600;
            text-align: center;
            margin-bottom: 2rem;
            color: #333;
        }

        .custom-card {
            background: #fff;
            padding: 2rem;
            border-radius: 16px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }

        .btn-create {
            background-color: #ede4da;
            border: 1px solid #d5bca3;
            color: #8d7051;
            font-weight: bold;
            padding: 10px 20px;
            border-radius: 6px;
            margin-bottom: 1.5rem;
            transition: 0.3s ease;
        }

            .btn-create:hover {
                background-color: #decdbd;
            }

        .table thead {
            background-color: #f0e6da;
        }

        .table th {
            font-weight: 600;
            color: #5a4637;
        }

        .table td {
            vertical-align: middle;
        }

        .action-links a {
            margin-right: 10px;
            text-decoration: none;
            color: #0d6efd;
            font-weight: 500;
        }

            .action-links a:hover {
                text-decoration: underline;
            }
    </style>
}

<div class="container mt-5">
    <h1 class="page-title">Manage Categories</h1>

    <div class="custom-card">
        <p>
            <a class="btn btn-create" asp-page="Create">+ Create New Category</a>
        </p>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Category[0].Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Category[0].CreatedAt)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Category)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                        <td class="action-links">
                            <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a>
                            <a asp-page="./Details" asp-route-id="@item.Id">Details</a>
                            <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
