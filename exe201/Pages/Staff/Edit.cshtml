@page
@model exe201.Pages.Staff.EditModel

@{
    ViewData["Title"] = "Edit Category";
    Layout = "~/Pages/Shared/_StaffLayout.cshtml";
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f5f3ed;
            font-family: 'Poppins', sans-serif;
        }

        .edit-title {
            font-size: 2rem;
            font-weight: 600;
            text-align: center;
            margin-bottom: 2rem;
            color: #333;
        }

        .edit-card {
            background: #fff;
            padding: 2rem;
            border-radius: 16px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }

        .form-label {
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .form-control {
            border-radius: 8px;
            padding: 10px;
            font-size: 1rem;
        }

        .btn-save {
            margin-top: 1.5rem;
            background-color: #ede4da;
            border: 1px solid #d5bca3;
            color: #8d7051;
            font-weight: 600;
            padding: 10px 20px;
            border-radius: 8px;
            transition: 0.3s ease;
        }

            .btn-save:hover {
                background-color: #decdbd;
            }

        .btn-back {
            margin-top: 1rem;
            display: inline-block;
            color: #333;
            font-weight: 500;
            text-decoration: none;
            padding: 8px 16px;
            border: 1px solid #ccc;
            border-radius: 8px;
            transition: 0.3s;
        }

            .btn-back:hover {
                background-color: #e0e0e0;
            }

        .text-danger {
            font-size: 0.9rem;
        }
    </style>
}

<div class="container mt-5">
    <h1 class="edit-title">Edit Category</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="edit-card">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="Category.Id" />

                    <div class="mb-3">
                        <label asp-for="Category.Name" class="form-label">Name <span class="text-danger">*</span></label>
                        <input asp-for="Category.Name" class="form-control" />
                        <span asp-validation-for="Category.Name" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-save">Save</button>
                </form>

                <a asp-page="./Index" class="btn-back mt-3">← Back to List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
