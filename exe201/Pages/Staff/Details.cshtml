@page
@model exe201.Pages.Staff.DetailsModel

@{
    ViewData["Title"] = "Category Details";
    Layout = "~/Pages/Shared/_StaffLayout.cshtml";
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f5f3ed;
            font-family: 'Poppins', sans-serif;
        }

        .details-title {
            font-size: 2rem;
            font-weight: 600;
            text-align: center;
            margin-bottom: 2rem;
            color: #333;
        }

        .custom-card {
            background: #fff;
            padding: 2rem;
            border-radius: 16px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }

        dt {
            font-weight: 600;
            color: #5a4637;
        }

        dd {
            color: #333;
            margin-bottom: 1rem;
        }

        .btn-group a {
            margin-right: 1rem;
            text-decoration: none;
            font-weight: 500;
            padding: 0.5rem 1.2rem;
            border-radius: 6px;
            transition: 0.2s;
        }

        .btn-edit {
            background-color: #ede4da;
            border: 1px solid #d5bca3;
            color: #8d7051;
        }

            .btn-edit:hover {
                background-color: #decdbd;
            }

        .btn-back {
            background-color: #f0f0f0;
            color: #333;
            border: 1px solid #ccc;
        }

            .btn-back:hover {
                background-color: #e0e0e0;
            }
    </style>
}

<div class="container mt-5">
    <h1 class="details-title">Category Details</h1>

    <div class="custom-card">
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Category.Name)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Category.Name)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Category.CreatedAt)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Category.CreatedAt)
            </dd>
        </dl>

        <div class="btn-group mt-4">
            <a asp-page="./Edit" asp-route-id="@Model.Category.Id" class="btn btn-edit">Edit</a>
            <a asp-page="./Index" class="btn btn-back">Back to List</a>
        </div>
    </div>
</div>
