@page
@model exe201.Pages.Staff.CreateModel

@{
    ViewData["Title"] = "Create Category";
    Layout = "~/Pages/Shared/_StaffLayout.cshtml";
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@500&family=Poppins&display=swap" rel="stylesheet" />
    <style>
        body {
            background-color: #f5f3ed;
            font-family: 'Poppins', sans-serif;
        }

        .create-card {
            background: #fff;
            padding: 2rem;
            border-radius: 16px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }

        .create-title {
            font-size: 2rem;
            font-weight: 600;
            font-family: 'Playfair Display', serif;
            text-align: center;
            margin-bottom: 1.5rem;
            position: relative;
        }

            .create-title::after {
                content: "";
                display: block;
                width: 60px;
                height: 3px;
                background-color: #8d7051;
                margin: 8px auto 0;
                border-radius: 2px;
            }

        .form-label {
            font-weight: 600;
        }

        .form-control {
            border-radius: 8px;
        }

        .text-danger {
            font-size: 0.875rem;
        }

        .btn-create {
            background-color: #ede4da;
            border: 1px solid #d5bca3;
            color: #8d7051;
            font-weight: 600;
            padding: 0.6rem 1.5rem;
            border-radius: 8px;
            transition: 0.3s ease;
        }

            .btn-create:hover {
                background-color: #decdbd;
            }

        .btn-back {
            margin-top: 1rem;
            display: inline-block;
            text-decoration: none;
            color: #555;
        }

            .btn-back:hover {
                color: #000;
            }
    </style>
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="create-title">Create Category</h1>
            <div class="create-card">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Category.Name" class="form-label">Name <span class="text-danger">*</span></label>
                        <input asp-for="Category.Name" class="form-control" />
                        <span asp-validation-for="Category.Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Category.CreatedAt" class="form-label">Created At</label>
                        <input asp-for="Category.CreatedAt" class="form-control" />
                        <span asp-validation-for="Category.CreatedAt" class="text-danger"></span>
                    </div>

                    <div class="text-center">
                        <input type="submit" value="Create" class="btn btn-create" />
                    </div>
                </form>

                <div class="text-center">
                    <a asp-page="Index" class="btn-back">← Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
