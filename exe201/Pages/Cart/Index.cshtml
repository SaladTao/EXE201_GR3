@page
@model exe201.Pages.Cart.IndexModel
@{
    ViewData["Title"] = "Giỏ hàng";
}

<h1>Giỏ hàng của bạn</h1>

@if (Model.CartItems != null && Model.CartItems.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CartItems)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>@item.Quantity</td>
                    <td>@item.Product.Price.ToString("C")</td>
                    <td>
                        <a href="@Url.Page("Edit", new { id = item.Id })">Sửa</a> |
                        <a href="@Url.Page("Delete", new { id = item.Id })">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <h3>Tổng cộng: @Model.TotalAmount.ToString("C")</h3>
    <a href="@Url.Page("Checkout")" class="btn btn-primary">Tiến hành thanh toán</a>
}
else
{
    <p>Giỏ hàng của bạn đang trống.</p>
}
        