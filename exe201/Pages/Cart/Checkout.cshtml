@page
@model exe201.Pages.Cart.CheckoutModel
@{
    ViewData["Title"] = "Checkout";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<style>
    .checkout-container {
        padding: 2rem 0;
    }

    .checkout-card {
        border: none;
        box-shadow: 0 0 15px rgba(0,0,0,0.1);
        border-radius: 10px;
    }

    .checkout-header {
        background-color: #f8f9fa;
        border-radius: 10px 10px 0 0;
        padding: 1rem;
        border-bottom: 1px solid #eee;
    }

    .checkout-body {
        padding: 1.5rem;
    }

    .form-label {
        font-weight: 500;
        color: #495057;
    }

    .form-control {
        border-radius: 5px;
        border: 1px solid #ced4da;
        padding: 0.5rem 0.75rem;
    }

    .form-control:focus {
        border-color: #80bdff;
        box-shadow: 0 0 0 0.2rem rgba(0,123,255,.25);
    }

    .order-summary {
        background-color: #f8f9fa;
        border-radius: 10px;
        padding: 1.5rem;
    }

    .order-item {
        padding: 0.75rem 0;
        border-bottom: 1px solid #eee;
    }

    .order-item:last-child {
        border-bottom: none;
    }

    .btn-checkout {
        background-color: #28a745;
        color: white;
        padding: 0.5rem 1.5rem;
        border: none;
        border-radius: 5px;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .btn-checkout:hover {
        background-color: #218838;
        transform: translateY(-1px);
    }

    .btn-back {
        background-color: #6c757d;
        color: white;
        padding: 0.5rem 1.5rem;
        border: none;
        border-radius: 5px;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .btn-back:hover {
        background-color: #5a6268;
        transform: translateY(-1px);
    }

    .total-amount {
        font-size: 1.25rem;
        font-weight: bold;
        color: #28a745;
        margin-top: 1rem;
        padding-top: 1rem;
        border-top: 2px solid #eee;
    }

    .vietnamese-font {
        font-family: 'Quicksand', 'Noto Sans', 'Roboto', Arial, sans-serif;
        font-weight: 400;
        line-height: 1.6;
        letter-spacing: 0.2px;
        color: #333;
    }

        .vietnamese-font h2,
        .vietnamese-font h3,
        .vietnamese-font h4 {
            font-weight: 700;
        }

        .vietnamese-font p {
            margin-bottom: 1em;
        }

    .btn-checkout i,
    .btn-back i {
        font-size: 1.2rem;
    }

    .btn-back {
        background-color: #6c757d;
        color: white !important;
    }

    .btn-checkout,
    .btn-back {
        height: 60px;
        font-weight: 600;
        font-size: 1rem;
    }

</style>

<div class="container checkout-container">
    <h2 class="mb-4">Thanh toán</h2>
    
    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-8">
            <div class="card checkout-card mb-4">
                <div class="checkout-header">
                    <h4 class="mb-0 vietnamese-font">Thông tin giao hàng</h4>
                </div>
                <div class="checkout-body">
                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label">Họ và tên</label>
                            <input asp-for="FullName" class="form-control" required />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Address" class="form-label">Địa chỉ</label>
                            <input asp-for="Address" class="form-control" required />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label">Số điện thoại</label>
                            <input asp-for="Phone" class="form-control" required />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                        <div class="row mt-4">
                            <div class="col-6 pe-2">
                                <div class="d-grid h-100">
                                    <a href="/Cart/Index" class="btn btn-back w-100 h-100 d-flex align-items-center justify-content-center">
                                        <i class="bi bi-arrow-left me-2"></i> Quay lại giỏ hàng
                                    </a>
                                </div>
                            </div>
                            <div class="col-6 ps-2">
                                <div class="d-grid h-100">
                                    <button type="submit" class="btn btn-checkout w-100 h-100 d-flex align-items-center justify-content-center">
                                        <i class="bi bi-check2-circle me-2"></i> Đặt hàng
                                    </button>
                                </div>
                            </div>
                        </div>


                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="order-summary">
                <h4 class="mb-3">Đơn hàng của bạn</h4>
                @if (Model.CartItems != null && Model.CartItems.Any())
                {
                    <div class="order-items">
                        @foreach (var item in Model.CartItems)
                        {
                            <div class="order-item">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-1 vietnamese-font">@item.Product.Name</h6>
                                        <small class="text-muted">Số lượng: @item.Quantity</small>
                                    </div>
                                    <span>@((item.Product.Price * item.Quantity).ToString("N0")) VNĐ</span>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="total-amount">
                        <div class="d-flex justify-content-between">
                            <span>Tổng tiền:</span>
                            <span>@Model.Total.ToString("N0") VNĐ</span>
                        </div>
                    </div>
                }
                else
                {
                    <p class="text-muted">Không có sản phẩm nào</p>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
