@page
@model exe201.Pages.Cart.OrderHistoryModel
@{
    ViewData["Title"] = "Lịch sử đơn hàng";
}

<style>
    .order-history-container {
        padding: 2rem 0;
    }

    .order-card {
        border: none;
        box-shadow: 0 0 15px rgba(0,0,0,0.1);
        border-radius: 10px;
        margin-bottom: 1.5rem;
        transition: all 0.3s ease;
    }

    .order-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 5px 20px rgba(0,0,0,0.15);
    }

    .order-header {
        background-color: #f8f9fa;
        border-radius: 10px 10px 0 0;
        padding: 1rem;
        border-bottom: 1px solid #eee;
    }

    .order-body {
        padding: 1.5rem;
    }

    .order-id {
        font-weight: 600;
        color: #555;
    }

    .order-date {
        color: #777;
        font-size: 0.9rem;
    }

    .order-status {
        padding: 0.35rem 0.75rem;
        border-radius: 50px;
        font-size: 0.85rem;
        font-weight: 500;
    }

    .status-pending {
        background-color: #fff3cd;
        color: #856404;
    }

    .status-completed {
        background-color: #d4edda;
        color: #155724;
    }

    .status-shipping {
        background-color: #cce5ff;
        color: #004085;
    }

    .status-cancelled {
        background-color: #f8d7da;
        color: #721c24;
    }

    .btn-detail {
        background-color: #6c757d;
        color: white;
        padding: 0.5rem 1.25rem;
        border: none;
        border-radius: 5px;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .btn-detail:hover {
        background-color: #5a6268;
        color: white;
    }

    .empty-orders {
        text-align: center;
        padding: 3rem 0;
    }

    .empty-orders i {
        font-size: 3rem;
        color: #ccc;
        margin-bottom: 1rem;
    }

    .empty-orders p {
        color: #777;
        font-size: 1.1rem;
    }

    .vietnamese-font {
        font-family: 'Quicksand', 'Noto Sans', 'Roboto', Arial, sans-serif;
        font-weight: 400;
        line-height: 1.6;
        letter-spacing: 0.2px;
        color: #333;
    }

        .vietnamese-font h2,
        .vietnamese-font h3,
        .vietnamese-font h4 {
            font-weight: 700;
        }

        .vietnamese-font p {
            margin-bottom: 1em;
        }

</style>

<div class="container order-history-container">
    <h2 class="mb-4">Lịch sử đơn hàng</h2>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model.Orders == null || !Model.Orders.Any())
    {
        <div class="empty-orders">
            <i class="bi bi-bag-x"></i>
            <p>Bạn chưa có đơn hàng nào</p>
            <a href="/Home/Index" class="btn btn-primary mt-3">Tiếp tục mua sắm</a>
        </div>
    }
    else
    {
        @foreach (var order in Model.Orders)
        {
            <div class="card order-card">
                <div class="order-header d-flex justify-content-between align-items-center">
                    <div>
                        <span class="order-id">Đơn hàng #@order.Id</span>
                        <span class="ms-3 order-date">@order.CreatedAt.ToString("dd/MM/yyyy HH:mm")</span>
                    </div>
                    <span class="order-status @GetStatusClass(order.Status)">@order.Status</span>
                </div>
                <div class="order-body">
                    <div class="row">
                        <div class="col-md-8">
                            <p class="mb-2"><strong>Tổng tiền:</strong> @order.TotalAmount.ToString("N0") VNĐ</p>
                        </div>
                        <div class="col-md-4 text-end">
                            <a asp-page="/Cart/OrderDetail" asp-route-orderId="@order.Id" class="btn btn-detail">
                                Xem chi tiết
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>

@functions {
    public string GetStatusClass(string status)
    {
        return status switch
        {
            "Pending" => "status-pending",
            "Completed" => "status-completed",
            "Shipping" => "status-shipping",
            "Cancelled" => "status-cancelled",
            _ => ""
        };
    }
}
