 
@page
@model exe201.Pages.Home.StoryModel
@{
    ViewData["Title"] = "Câu chuyện";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ecommerce Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f5f3ed;
            font-family: 'Poppins', sans-serif;
        }

        .page-title {
            font-size: 2.5rem;
            font-weight: 600;
            text-align: center;
            margin-bottom: 2rem;
            color: #333;
        }

        .custom-card {
            background: #fff;
            padding: 2rem;
            border-radius: 16px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
        }

            .custom-card:hover {
                transform: translateY(-5px);
            }

        .btn-create {
            background-color: #ede4da;
            border: 1px solid #d5bca3;
            color: #8d7051;
            font-weight: bold;
            padding: 10px 20px;
            border-radius: 6px;
            margin-bottom: 1.5rem;
            transition: 0.3s ease;
        }

            .btn-create:hover {
                background-color: #decdbd;
            }

        .table thead {
            background-color: #f0e6da;
        }

        .table th {
            font-weight: 600;
            color: #5a4637;
        }

        .table td {
            vertical-align: middle;
        }

        .action-links a {
            margin-right: 10px;
            text-decoration: none;
            color: #0d6efd;
            font-weight: 500;
        }

            .action-links a:hover {
                text-decoration: underline;
            }

        .story-image {
            width: 100%;
            max-width: 600px;
            height: auto;
            border-radius: 8px;
            display: block;
            margin: 0 auto;
        }

        .story-link {
            text-decoration: none;
            color: inherit;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <h1 class="page-title">Những câu chuyện về mây tre đan</h1>

        @if (Model.Stories == null || !Model.Stories.Any())
        {
            <div class="custom-card">
                <p class="text-muted text-center">Chưa có câu chuyện nào.</p>
            </div>
        }
        else
        {
            foreach (var story in Model.Stories)
            {
                <a asp-page="/Home/StoryDetail" asp-route-id="@story.Id" class="story-link">
                    <div class="custom-card mb-4">
                        <h2 class="page-title">@story.Title</h2>
                        <img src="@story.ImageUrl" alt="@story.Title" class="story-image" />
                    </div>
                </a>
            }
        }
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>