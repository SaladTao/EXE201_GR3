@page
@model exe201.Pages.Home.FilterModel
@{
}
<link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@400;700&display=swap&subset=vietnamese" rel="stylesheet">

<!-- Định nghĩa style sửa lỗi font tiếng Việt -->
<style>
    .vietnamese-font {
        font-family: 'Quicksand', 'Noto Sans', 'Roboto', Arial, sans-serif;
        font-weight: 400;
        line-height: 1.6;
        letter-spacing: 0.2px;
        color: #333;
    }

        .vietnamese-font h2,
        .vietnamese-font h3,
        .vietnamese-font h4 {
            font-weight: 700;
        }

        .vietnamese-font p {
            margin-bottom: 1em;
        }

</style>
<section id="popular-books" class="bookshelf py-5 my-5">
    <div class="container">
        <div class="row">

            <div id="all-genre" data-tab-content class="active" style="display: flex; justify-content: center; margin-top: 50px;">
                <div class="row" style="display: flex; flex-wrap: wrap; justify-content: center; gap: 20px;">
                    @foreach (var item in Model.products)
                    {
                        <div class="col-md-3">
                            <div class="product-item">
                                <figure class="product-style">
                                    <a href="/Detail/DetailsProduct?productId=@item.Id">
                                        <img src="@Url.Content(item.ImageUrl)" alt="@item.Name" class="product-item" />
                                    </a>
                                    <button type="button" class="add-to-cart" data-product-tile="add-to-cart">Xem Chi Tiết</button>
                                </figure>
                                <figcaption>
                                    <h3 class="vietnamese-font">
                                        <a href="/Home/DetailsProduct?productId=@item.Id">@item.Name</a>
                                    </h3>
                                    <span>@item.Price.ToString("N0") VNĐ</span>
                                </figcaption>
                            </div>
                        </div>
                    }
                </div>
            </div>


        </div>

    </div><!--inner-tabs-->


</section>

