@page "{id:int}"
@model exe201.Pages.Home.StoryDetailModel
@{
    ViewData["Title"] = "Chi tiết Câu chuyện";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mây Tre Story</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f5f3ed;
            font-family: 'Poppins', sans-serif;
        }

        .custom-card {
            background: #fff;
            padding: 2rem;
            border-radius: 16px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            margin-top: 2rem;
        }

        .story-title {
            font-size: 2rem;
            font-weight: 600;
            color: #3d2f2f;
            text-align: center;
            margin-bottom: 1.5rem;
        }

        .story-image {
            display: block;
            max-width: 100%;
            height: auto;
            border-radius: 10px;
            margin: 0 auto 1.5rem auto;
        }

        .story-description {
            font-size: 1.15rem;
            color: #444;
            line-height: 1.75;
            text-align: justify;
        }

        .back-link {
            display: inline-block;
            margin-top: 2rem;
            font-weight: 500;
            color: #0d6efd;
            text-decoration: none;
        }

            .back-link:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div class="container">
        @if (Model.Story == null)
        {
            <div class="custom-card text-center">
                <p class="text-muted">Câu chuyện không tồn tại.</p>
                <a asp-page="/Home/Story"
                   asp-route-PageNumber="@Model.PageNumber"
                   asp-route-selectedCategory="@Model.SelectedCategory"
                   class="back-link">
                    ← Quay lại danh sách câu chuyện
                </a>
            </div>
        }
        else
        {
            <div class="custom-card">
                <h1 class="story-title">@Model.Story.Title</h1>

                @if (!string.IsNullOrEmpty(Model.Story.ImageUrl))
                {
                    <img src="@Model.Story.ImageUrl" alt="@Model.Story.Title" class="story-image" />
                }

                <p class="story-description">
                    @(!string.IsNullOrWhiteSpace(Model.Story.Description)
                        ? Model.Story.Description
                        : "Nội dung câu chuyện đang được cập nhật...")
                </p>

                <a asp-page="/Home/Story"
                   asp-route-PageNumber="@Model.PageNumber"
                   asp-route-selectedCategory="@Model.SelectedCategory"
                   class="back-link">
                    ← Quay lại danh sách câu chuyện
                </a>
            </div>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
