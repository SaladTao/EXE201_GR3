@page "{id:int}"
@model exe201.Pages.Home.StoryDetailModel
@{
    ViewData["Title"] = "Câu chuyện";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ecommerce Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f5f3ed;
            font-family: 'Poppins', sans-serif;
        }

        .page-title {
            font-size: 2.5rem;
            font-weight: 600;
            text-align: center;
            margin-bottom: 2rem;
            color: #333;
        }

        .custom-card {
            background: #fff;
            padding: 2rem;
            border-radius: 16px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }

        .btn-create {
            background-color: #ede4da;
            border: 1px solid #d5bca3;
            color: #8d7051;
            font-weight: bold;
            padding: 10px 20px;
            border-radius: 6px;
            margin-bottom: 1.5rem;
            transition: 0.3s ease;
        }

            .btn-create:hover {
                background-color: #decdbd;
            }

        .table thead {
            background-color: #f0e6da;
        }

        .table th {
            font-weight: 600;
            color: #5a4637;
        }

        .table td {
            vertical-align: middle;
        }

        .action-links a {
            margin-right: 10px;
            text-decoration: none;
            color: #0d6efd;
            font-weight: 500;
        }

            .action-links a:hover {
                text-decoration: underline;
            }

        .story-image {
            width: 100%;
            max-width: 600px;
            height: auto;
            border-radius: 8px;
            display: block;
            margin: 0 auto 1rem auto;
        }

        .story-description {
            font-size: 1.1rem;
            color: #666;
            line-height: 1.6;
            text-align: justify;
        }

        .back-link {
            display: inline-block;
            margin-top: 1rem;
            text-decoration: none;
            color: #0d6efd;
            font-weight: 500;
        }

            .back-link:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div class="container mt-4">
        @if (Model.Storys == null)
        {
            <div class="custom-card">
                <p class="text-muted text-center">Câu chuyện không tồn tại.</p>
                <a asp-page="/Home/Story"
                   asp-route-PageNumber="@Model.PageNumber"
                   asp-route-selectedCategory="@Model.SelectedCategory"
                   class="back-link">
                    Quay lại danh sách câu chuyện
                </a>

            </div>
        }
        else
        {
            <div class="custom-card">
                <h1 class="page-title">@Model.Storys.Title</h1>
                <img src="@Model.Storys.ImageUrl" alt="@Model.Storys.Title" class="story-image" />
                <p class="story-description">@Model.Storys.Description</p>
                <a asp-page="/Home/Story"
                   asp-route-PageNumber="@Model.PageNumber"
                   asp-route-selectedCategory="@Model.SelectedCategory"
                   class="back-link">
                    Quay lại danh sách câu chuyện
                </a>

            </div>
        }
    </div>
     
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>